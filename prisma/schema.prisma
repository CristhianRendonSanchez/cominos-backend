// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model producto {
  id        String @id @default(cuid())
  nombre_producto  String 
  cantidad Int
  registro_invima String 
  fechafabricacion DateTime
  fecha_vencimiento DateTime
  lote Int
  descripcion String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}
model errores  {
   codigo      String @id @default(cuid())
   error Boolean
  funcion String 
  reporte String
  solucion String 
  mensaje String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}
model pedido  {
  codigo      String @id @default(cuid())
  fecha DateTime
  producto String
  valor Int
  descripcion String
  nombre String
  ciudad String
  departamento String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

model venta  {
  codigo      String @id @default(cuid())
  fecha DateTime
  valor Int
  descripcion String
  nombre String
  lugar String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  CONSTRAINT fk_pedido
        FOREIGN KEY (pedido_codigo )
        REFERENCES pedido(codigo)

}


model cliente  {
  cedula     String @id @default(cuid())
  ciudad String
  empresa String
  correo  String
  telefono String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}